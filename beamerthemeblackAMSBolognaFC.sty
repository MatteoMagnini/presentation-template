%
\setbeamertemplate{navigation symbols}{}
%
\useoutertheme{infolines}
\useinnertheme[shadow=false]{rounded}
%%% TO UNCOMMENT FOR LOCAL DIR
\usecolortheme{blackbolognafc}
%% Alma Logo
\pgfdeclareimage[height=.97\paperheight]{bg}{almacesena-black-background}
%\pgfdeclareimage[width=\paperwidth]{bg}{img/almacesena-background}
\setbeamertemplate{background}{\pgfuseimage{bg}}
% text
\setbeamercolor{normal text}{fg=bolognafcwhite!90!black}
\setbeamercolor{alerted text}{fg=bolognafcgold!90!white}
\setbeamercolor{quote}{fg=bolognafcblue!50!white}
% bullets
\setbeamercolor*{item}{fg=bolognafcgold,bg=black}
\setbeamercolor*{itemize items}{fg=bolognafcgold,bg=black}
\setbeamercolor*{itemize subitem}{fg=bolognafcgold,bg=black}
% front page
\setbeamercolor{title}{fg=bolognafcsilver!75!white}
\setbeamercolor{subtitle}{fg=bolognafcsilver!90!white}
\setbeamercolor{author}{fg=bolognafcsilver!40!black}
\setbeamercolor{institute}{fg=bolognafcblue!40!white}
\setbeamercolor{date}{fg=bolognafcblue!40!white}
% block header
\setbeamercolor{block title}{use=structure,fg=bolognafcsilver!90!white,bg=bolognafcblue!75!black}
\setbeamercolor{block title alerted}{use=alerted text,fg=bolognafcsilver!25!white,bg=bolognafcblue!75!black}
\setbeamercolor{block title example}{use=example text,fg=bolognafcblue!50!white,bg=bolognafcblue!75!black}
% block body
\setbeamercolor{block body}{parent=normal text,use=block title,bg=bolognafcblue!40!black}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=bolognafcblue!40!black}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=bolognafcblue!40!black}
% table of content
\setbeamercolor{section in toc}{fg=bolognafcsilver!90!white}
\setbeamercolor{section in toc shaded}{fg=black}
\setbeamertemplate{section in toc shaded}[default][70]
\setbeamertemplate{subsection in toc shaded}[fg][bolognafcsilver!20!black]
\setbeamercolor{subsection in toc}{fg=bolognafcsilver!90!black}
% footnote
\setbeamercolor{footnote mark}{fg=bolognafcred!90!white}
\setbeamercolor{footnote}{fg=bolognafcblue!25!gray}
% biblio
\setbeamertemplate{bibliography item}{\insertbiblabel}
\setbeamercolor{bibliography entry author}{fg=bolognafcblue!75!white}
\setbeamercolor{bibliography entry title}{fg=bolognafcsilver!75!white}
\setbeamercolor{bibliography entry location}{fg=bolognafcblue!75!white}
% Invisible
\setbeamercolor{bibliography entry note}{fg=black}
% abstract
\setbeamercolor*{abstract title}{fg=bolognafcblue!50!white}
\setbeamerfont*{abstract title}{family=\sffamily}
\setbeamercolor*{abstract}{fg=purple!50!white}
\setbeamerfont*{abstract}{family=\rmfamily,size=\small}
% Citation
\newcommand{\ccite}[1]{{\textcolor{bolognafcsilver!80!white}{\textsuperscript{\tiny\cite{#1}}}}}
\newcommand{\cccite}[1]{{\textcolor{bolognafcsilver}{\textsuperscript{\tiny\cite{#1}}}}}
% URL
\newcommand{\uurl}[1]{{\textcolor{bolognafcred!50!white}{\scriptsize\url{#1}}}}
\newcommand{\uuurl}[1]{{\textcolor{bolognafcsilver!50!white}{\tiny\url{#1}}}}
% DOI
\newcommand{\ddoi}[1]{{\textcolor{bolognafcred!50!white}{\scriptsize\href{http://dx.doi.org/#1}{DOI:#1}}}}
\newcommand{\dddoi}[1]{{\textcolor{bolognafcsilver!50!white}{\tiny\href{http://dx.doi.org/#1}{DOI:#1}}}}
% emph
\renewcommand{\emph}[1]{\textcolor{white}{\textit{#1}}}
% alert
%\renewcommand{\alert}[1]{\textcolor{bolognafcgold!90!white}{#1}}
\newcommand{\aalert}[1]{\textcolor{bolognafcgold!90!white}{\it#1}}
% speaker
\newcommand{\speaker}[1]{\textcolor{bolognafcblue!75!red}{#1}}
\newcommand{\sspeaker}[1]{\textcolor{bolognafcred!20!white}{\it#1}}
